//- svg mixin
mixin svgMix(svgClass, name, mOrP)
	svg(class=svgClass)
		if mOrP === "m"
			use(xlink:href='assets/img/medisa/sprite.svg#'+name)
		if mOrP === "p"
			use(xlink:href='assets/img/pyatka/sprite.svg#'+name)


//- breadCrumbs mixin
mixin breadCrumbs(items)
	.breadcrumbs.container
		each i in items
			a(href="#").breadcrumbs__link= i

mixin product(name, model, imgSrc, dual_price, corob_price, _new)
	//- -viewed – класс для посещённых товаров
	if m === true
		.product
			if (_new === true)
				.product__mark
					.product__mark-item(style="background: #ffcb00") New
			a(href="#").product__img-box
				img.product__img(src= imgSrc, alt= name)
			.product__review
				strong.product__name= name
				p.product__model= model
				.product__price-box
					.product__price.-pair
						b= dual_price + " ₽"
						| за пару
					.product__price.-box
						b= corob_price + " ₽"
						| за короб
			a(href="#").product__more Подробнее
	if p === true
		.product
			if (_new === true)
				.product__mark
					.product__mark-item(style="background: #ffcb00") New
			a(href="#").product__img-box
				img.product__img(src= imgSrc, alt= name)
			.product__review
				strong.product__name= name
				p.product__model= model
				.product__price-box
					.product__price
						b 500 ₽
						
			a(href="#").product__more Подробнее

